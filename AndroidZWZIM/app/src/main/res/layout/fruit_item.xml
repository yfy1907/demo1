<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="情感"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textSize="22sp"
                android:textColor="#000"/>

            <ImageView
                android:id="@+id/iv_sense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/emotion"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:text="最近很心烦"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_emotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="最近遇到很多烦心事，下面我和大家说说吧"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_voice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/pb_voice"/>

        <ImageView
            android:id="@+id/iv_voice2"
            android:layout_width="100dp"
            android:scaleType="matrix"
            android:scaleY="0.8"
            android:layout_height="wrap_content"
            android:src="@drawable/pb_voice"/>

        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:src="@drawable/video"/>

        <TextView
            android:id="@+id/tv_family"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="有心里话想说说？"
            android:visibility="gone"
            android:textColor="#000"
            android:layout_marginTop="30dp"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_confide"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/confide"/>
    </LinearLayout>
</android.support.v7.widget.CardView>